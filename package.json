{
  "name": "omnivault",
  "version": "0.1.0",
  "description": "OmniVault: Cross-Chain Yield Optimizer powered by LayerZero V2",
  "scripts": {
    "start:validator": "docker-compose up solana-test-validator -d",
    "stop:validator": "docker-compose down",
    "build:program": "cd solana-program && anchor build",
    "deploy:program:localnet": "cd solana-program && anchor deploy",
    "deploy:program:devnet": "cd solana-program && anchor deploy --provider.cluster devnet",
    "test:program": "cd solana-program && anchor test",
    "start:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "generate:idl": "node scripts/generate-idl.js",
    "setup": "npm run build:program && npm run generate:idl",
    "dev": "concurrently \"npm run start:validator\" \"npm run start:frontend\"",
    "clean": "cd solana-program && anchor clean && cd ../frontend && rm -rf dist node_modules/.vite"
  },
  "keywords": [
    "solana",
    "layerzero",
    "defi",
    "yield-optimization",
    "cross-chain",
    "omnichain"
  ],
  "author": "OmniVault Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 